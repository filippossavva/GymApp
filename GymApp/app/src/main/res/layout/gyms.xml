<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    app:cardBackgroundColor="#202020"
    app:cardCornerRadius="50dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <ImageButton
            android:id="@+id/ibGyms"
            android:layout_width="375dp"
            android:layout_height="244dp"
            android:layout_gravity="center"
            android:onClick="goToFacilities"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/tvclasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvyoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvweights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvpersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvtabata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvboxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvpilates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvtrx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvzumba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0000"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FA0707"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvLng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FA0707"
            android:visibility="invisible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>